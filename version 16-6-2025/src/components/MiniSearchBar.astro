    // ðŸ”§ FUNCIÃ“N: Convertir precio entre monedas (aproximado)
    function convertPriceRange(currentRange, fromCurrency, toCurrency, accion) {
      if (!currentRange || fromCurrency === toCurrency) return currentRange;
      
      // Tasas de conversiÃ³n aproximadas (USD = 1, DOP â‰ˆ 50)
      const exchangeRate = 50;
      
      const currentRangos = rangosPrecios[accion][fromCurrency];
      const targetRangos = rangosPrecios[accion][toCurrency];
      
      const currentRangeObj = currentRangos.find(r => r.value === currentRange);
      if (!currentRangeObj) return '';
      
      let targetMin, targetMax;
      
      if (fromCurrency === 'USD' && toCurrency === 'DOP') {
        // USD a DOP
        targetMin = currentRangeObj.min * exchangeRate;
        targetMax = currentRangeObj.max ? currentRangeObj.max * exchangeRate : null;
      } else if (fromCurrency === 'DOP' && toCurrency === 'USD') {
        // DOP a USD
        targetMin = Math.round(currentRangeObj.min / exchangeRate);
        targetMax = currentRangeObj.max ? Math.round(currentRangeObj.max / exchangeRate) : null;
      }
      
      // Buscar el rango mÃ¡s cercano en la moneda de destino
      let bestMatch = '';
      let bestScore = Infinity;
      
      targetRangos.forEach(rango => {
        if (!rango.value) return; // Skip "Precio" option
        
        let score = 0;
        if (rango.min !== undefined) {
          score += Math.abs(rango.min - targetMin);
        }
        if (targetMax && rango.max !== undefined) {
          score += Math.abs(rango.max - targetMax);
        }
        
        if (score < bestScore) {
          bestScore = score;
          bestMatch = rango.value;
        }
      });
      
      return bestMatch;
    }

    function updatePriceRanges() {
      if (!precioSelect) return;
      
      const oldCurrency = precioSelect.dataset.currentCurrency || 'USD';
      const newCurrency = currentState.moneda;
      const currentValue = currentState.precio;
      
      console.log('ðŸ’° Actualizando rangos:', { oldCurrency, newCurrency, currentValue });
      
      const rangos = rangosPrecios[currentState.accion][currentState.moneda];
      
      // Rebuild options
      precioSelect.innerHTML = '';
      rangos.forEach(rango => {
        const option = document.createElement('option');
        option.value = rango.value;
        option.textContent = rango.label;
        precioSelect.appendChild(option);
      });
      
      // ðŸŽ¯ OPCIÃ“N 2: Convertir rango a moneda equivalente
      if (currentValue && oldCurrency !== newCurrency) {
        const equivalentRange = convertPriceRange(currentValue, oldCurrency, newCurrency, currentState.accion);
        
        if (equivalentRange && rangos.some(r => r.value === equivalentRange)) {
          currentState.precio = equivalentRange;
          precioSelect.value = equivalentRange;
          console.log(`âœ… Precio convertido: ${currentValue} (${oldCurrency}) â†’ ${equivalentRange} (${newCurrency})`);
        } else {
          console.log('âŒ No se pudo convertir, limpiando precio');
          currentState.precio = '';
          precioSelect.value = '';
        }
      } else if (currentValue) {
        // Mantener si es la misma moneda
        const hasCurrentValue = rangos.some(r => r.value === currentValue);
        if (hasCurrentValue) {
          precioSelect.value = currentValue;
        } else {
          currentState.precio = '';
          precioSelect.value = '';
        }
      }
      
      // Guardar moneda actual para futuras conversiones
      precioSelect.dataset.currentCurrency = newCurrency;
    }

    function updateSectorOptions() {
      const ubicacion = currentState.ubicacion;
      
      if (ubicacion && sectoresPorUbicacion[ubicacion]) {
        sectorSelect.disabled = false;
        const sectores = sectoresPorUbicacion[ubicacion];
        
        sectorSelect.innerHTML = '';
        sectores.forEach(sector => {
          const option = document.createElement('option');
          option.value = sector.value;
          option.textContent = sector.label;
          sectorSelect.appendChild(option);
        });
        
        // Set current sector if exists
        if (currentState.sector) {
          sectorSelect.value = currentState.sector;
        }
      } else {
        sectorSelect.disabled = true;
        sectorSelect.innerHTML = '<option value="">Sector</option>';
        currentState.sector = '';
      }
    }

    // ðŸ”„ INICIALIZACIÃ“N desde URL
    function initializeFromURL() {
      console.log('ðŸ”„ Inicializando desde URL...');
      
      // Principales
      updateActionToggle(currentState.accion);
      updateCurrencyToggle(currentState.moneda);
      updatePriceRanges(); // Primero actualizar rangos
      
      if (tipoSelect) tipoSelect.value = currentState.tipo || '';
      if (ubicacionSelect) ubicacionSelect.value = currentState.ubicacion || '';
      
      updateSectorOptions(); // Actualizar sectores segÃºn ubicaciÃ³n
      
      // Secundarios (para el modal)
      if (modalHabitaciones) modalHabitaciones.value = currentState.habitaciones || '';
      if (modalBanos) modalBanos.value = currentState.banos || '';
      if (modalParqueos) modalParqueos.value = currentState.parqueos || '';
      
      // CaracterÃ­sticas (checkboxes en modal)
      if (currentState.caracteristicas && Array.isArray(currentState.caracteristicas)) {
        currentState.caracteristicas.forEach(caracValue => {
          const checkbox = document.querySelector(`.modal-checkbox[value="${caracValue}"]`);
          if (checkbox) {
            checkbox.checked = true;
            console.log('âœ… CaracterÃ­stica desde URL:', caracValue);
          }
        });
      }
      
      console.log('âœ… InicializaciÃ³n completa');
    }

    // ðŸŽ¯ EVENT LISTENERS - FILTROS PRINCIPALES (bÃºsqueda inmediata)
    
    // 1. AcciÃ³n
    actionBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const action = btn.dataset.action;
        if (action !== currentState.accion) {
          currentState.accion = action;
          updateActionToggle(action);
          updatePriceRanges(); // Cambiar rangos segÃºn acciÃ³n
          executeSearch(); // âš¡ INMEDIATO
        }
      });
    });

    // 2. Tipo
    tipoSelect?.addEventListener('change', function() {
      if (this.value !== currentState.tipo) {
        currentState.tipo = this.value;
        executeSearch(); // âš¡ INMEDIATO
      }
    });

    // 3. UbicaciÃ³n
    ubicacionSelect?.addEventListener('change', function() {
      if (this.value !== currentState.ubicacion) {
        currentState.ubicacion = this.value;
        currentState.sector = ''; // Limpiar sector al cambiar ubicaciÃ³n
        updateSectorOptions();
        executeSearch(); // âš¡ INMEDIATO
      }
    });

    // 4. Sector
    sectorSelect?.addEventListener('change', function() {
      if (this.value !== currentState.sector) {
        currentState.sector = this.value;
        executeSearch(); // âš¡ INMEDIATO
      }
    });

    // 5. Moneda - NO ejecuta bÃºsqueda, solo cambia rangos
    currencyBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const currency = btn.id === 'currency-usd' ? 'USD' : 'DOP';
        if (currency !== currentState.moneda) {
          currentState.moneda = currency;
          updateCurrencyToggle(currency);
          updatePriceRanges(); // Solo actualiza rangos, NO ejecuta bÃºsqueda
          localStorage.setItem('mini-search-currency', currency);
        }
      });
    });

    // 6. Precio - SÃ ejecuta bÃºsqueda inmediata
    precioSelect?.addEventListener('change', function() {
      if (this.value !== currentState.precio) {
        currentState.precio = this.value;
        executeSearch(); // âš¡ INMEDIATO
      }
    });

    // ðŸ”§ MODAL - FILTROS SECUNDARIOS
    
    moreFiltersToggle?.addEventListener('click', (e) => {
      e.preventDefault();
      advancedPanel?.classList.toggle('hidden');
    });

    closeAdvanced?.addEventListener('click', () => {
      advancedPanel?.classList.add('hidden');
    });

    // Aplicar filtros secundarios
    applySecondaryFilters?.addEventListener('click', () => {
      // Leer valores del modal
      currentState.habitaciones = modalHabitaciones?.value || '';
      currentState.banos = modalBanos?.value || '';
      currentState.parqueos = modalParqueos?.value || '';
      
      // Leer caracterÃ­sticas
      currentState.caracteristicas = [];
      document.querySelectorAll('.modal-checkbox:checked').forEach(checkbox => {
        currentState.caracteristicas.push(checkbox.value);
      });
      
      // Cerrar modal y ejecutar bÃºsqueda
      advancedPanel?.classList.add('hidden');
      executeSearch(); // âš¡ APLICAR TODOS
    });

    // Limpiar solo filtros secundarios
    clearSecondaryFilters?.addEventListener('click', () => {
      currentState.habitaciones = '';
      currentState.banos = '';
      currentState.parqueos = '';
      currentState.caracteristicas = [];
      
      // Limpiar UI del modal
      if (modalHabitaciones) modalHabitaciones.value = '';
      if (modalBanos) modalBanos.value = '';
      if (modalParqueos) modalParqueos.value = '';
      
      document.querySelectorAll('.modal-checkbox').forEach(checkbox => {
        checkbox.checked = false;
      });
    });

    // Botones de bÃºsqueda
    [searchBtn, searchBtnMobile].forEach(btn => {
      btn?.addEventListener('click', executeSearch);
    });

    // ðŸš€ INICIALIZAR TODO
    initializeFromURL();
  });
</script>

