// Estadísticas para turistas
const stats = [
  { number: '250+', label: 'Propiedades disponibles' },
  { number: '4.8/5', label: 'Rating de huéspedes' },
  { number: '$150', label: 'Precio promedio/noche' },
  { number: '24/7', label: 'Soporte al huésped' }
];

// Propiedades destacadas
const propiedadesDestacadas = [
  {
    slug: 'villa-paradiso-punta-cana',
    titulo: 'Villa Paradiso - Punta Cana',
    precio: '$320/noche',
    imagen: 'https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=800&h=600&fit=crop',
    sector: 'Punta Cana',
