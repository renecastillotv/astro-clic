  },
  {
    slug: 'apartamento-blue-mall',
    titulo: 'Apartamento moderno cerca de Blue Mall',
    precio: '$225,000',
    imagen: 'https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=800&h=600&fit=crop',
    sector: 'Piantini, D.N.',
    habitaciones: 2,
    banos: 2,
