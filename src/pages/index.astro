const popularLocations = [
  { name: 'Punta Cana', slug: 'punta-cana', count: 156, image: 'https://images.unsplash.com/photo-1589923188651-268a9765e432?w=400&h=300&fit=crop' },
  { name: 'Santo Domingo', slug: 'santo-domingo', count: 243, image: 'https://images.unsplash.com/photo-1568515045052-f9a854d70bfd?w=400&h=300&fit=crop' },
  { name: 'Santiago', slug: 'santiago', count: 89, image: 'https://images.unsplash.com/photo-1594736797933-d0501ba2fe65?w=400&h=300&fit=crop' },
  { name: 'Casa de Campo', slug: 'casa-de-campo', count: 67, image: 'https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=400&h=300&fit=crop' }
