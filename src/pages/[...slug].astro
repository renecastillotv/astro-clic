function shouldProcessRoute(urlSegments, pathname) {
  try {
    // EXCLUIR SITEMAP ESPEC√çFICAMENTE
    if (pathname === '/sitemap.xml' || pathname.endsWith('/sitemap.xml')) {
      console.log('Excluding sitemap.xml from router processing');
      return false;
    }
    
    const excludedPaths = [
      'images', 'img', 'assets', 'static', 'public',
      'css', 'js', 'fonts', 'favicon.ico', 'robots.txt', 
      '_astro', 'api', 'admin', 'wp-admin', 'wp-content',
      '.well-known', 'manifest.json', 'sw.js',
      'debug' // Tambi√©n excluir debug
    ];
    
    const excludedExtensions = [
      '.jpg', '.jpeg', '.png', '.gif', '.webp', '.svg', '.ico',
      '.css', '.js', '.json', '.txt', '.pdf', '.zip',
      '.woff', '.woff2', '.ttf', '.eot', '.mp4', '.mp3'
    ];
    // Agregar excepciones espec√≠ficas antes del filtro de extensiones
const allowedXmlPaths = ['/sitemap.xml', '/robots.txt'];
if (allowedXmlPaths.includes(pathname)) {
  return false; // No procesar en el router, dejar que Astro maneje el archivo
}
    if (urlSegments.length > 0 && excludedPaths.includes(urlSegments[0].toLowerCase())) {
      return false;
    }
    
    const lastSegment = urlSegments[urlSegments.length - 1] || '';
    if (excludedExtensions.some(ext => lastSegment.toLowerCase().endsWith(ext))) {
      return false;
    }
    
    if (excludedExtensions.some(ext => pathname.toLowerCase().endsWith(ext))) {
      return false;
    }
    
    return true;
  } catch (error) {
    console.error('‚ùå Error in shouldProcessRoute:', error);
    return true; // En caso de error, procesar la ruta
  }
}

// =====================================================
// FUNCI√ìN PARA DETECTAR IDIOMA Y RUTAS
