                ${parking > 0 ? `
                <div class="flex flex-col items-center bg-gray-50 rounded px-2 py-1.5">
                  <svg class="w-4 h-4 text-gray-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
