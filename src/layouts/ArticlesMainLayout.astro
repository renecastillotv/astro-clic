---
// src/layouts/ArticlesMainLayout.astro - Layout para p√°gina principal de art√≠culos optimizado
import Layout from './Layout.astro';
import PropertyCarousel from '../components/PropertyCarousel.astro';

// ===================================================================
// FUNCIONES HELPER PARA VALIDACI√ìN DEFENSIVA
// ===================================================================

function safeGet(obj, path, defaultValue = null) {
  try {
    return path.split('.').reduce((current, key) => current && current[key], obj) || defaultValue;
  } catch (error) {
    console.warn('safeGet error:', error, 'path:', path);
    return defaultValue;
  }
}

function safeArray(arr, defaultValue = []) {
  return Array.isArray(arr) ? arr : defaultValue;
}

function safeString(str, defaultValue = '') {
  return typeof str === 'string' ? str : defaultValue;
}

function safeObject(obj, defaultValue = {}) {
  return obj && typeof obj === 'object' && !Array.isArray(obj) ? obj : defaultValue;
}

function safeNumber(num, defaultValue = 0) {
  return typeof num === 'number' && !isNaN(num) ? num : defaultValue;
}

// ===================================================================
// EXTRACCI√ìN DE DATOS DEL PROP CON VALIDACI√ìN DEFENSIVA
// ===================================================================

const { data } = Astro.props;
const language = safeString(data?.language, 'es');

// ===================================================================
// PROCESAMIENTO DEFENSIVO DE DATOS
// ===================================================================

let articlesData = safeObject(data);

// Procesar art√≠culos destacados
const rawFeaturedArticles = safeArray(articlesData.featuredArticles);
const safeFeaturedArticles = rawFeaturedArticles.map((article, index) => ({
  id: safeString(article.id, `featured-${index}`),
  title: safeString(article.title, 'Art√≠culo sin t√≠tulo'),
  excerpt: safeString(article.excerpt, 'Extracto no disponible'),
  subtitle: safeString(article.subtitle),
  featuredImage: safeString(article.featuredImage || article.featured_image, 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=800&h=450&fit=crop'),
  publishedAt: safeString(article.publishedAt || article.published_at, new Date().toISOString()),
  views: safeNumber(article.views, 0),
  readTime: safeString(article.readTime || article.read_time, '5 min'),
  featured: Boolean(article.featured),
  url: safeString(article.url, '#'),
  slug: safeString(article.slug),
  category: safeString(article.category, 'General'),
  categorySlug: safeString(article.categorySlug || article.category_slug, 'general'),
  tags: safeArray(article.tags, []),
  author: safeObject(article.author, {
    name: 'Equipo CLIC',
    avatar: '/images/team/clic-experts.jpg',
    title: 'Especialista Inmobiliario'
  })
}));

// Procesar art√≠culos recientes
const rawRecentArticles = safeArray(articlesData.recentArticles);
const safeRecentArticles = rawRecentArticles.map((article, index) => ({
  id: safeString(article.id, `recent-${index}`),
  title: safeString(article.title, 'Art√≠culo sin t√≠tulo'),
  excerpt: safeString(article.excerpt, 'Extracto no disponible'),
  subtitle: safeString(article.subtitle),
  featuredImage: safeString(article.featuredImage || article.featured_image, 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=800&h=450&fit=crop'),
  publishedAt: safeString(article.publishedAt || article.published_at, new Date().toISOString()),
  views: safeNumber(article.views, 0),
  readTime: safeString(article.readTime || article.read_time, '5 min'),
  featured: Boolean(article.featured),
  url: safeString(article.url, '#'),
  slug: safeString(article.slug),
  author: safeObject(article.author, {
    name: 'Equipo CLIC',
    avatar: '/images/team/clic-experts.jpg',
    title: 'Especialista Inmobiliario'
  })
}));

// Encontrar el art√≠culo m√°s popular (mayor views)
const allArticles = [...safeFeaturedArticles, ...safeRecentArticles];
const mostPopularArticle = allArticles.reduce((prev, current) => 
  (current.views > prev.views) ? current : prev, 
  allArticles[0] || null
);

// Art√≠culos para el carrusel (excluir el m√°s popular)
const carouselArticles = allArticles.filter(article => 
  article.id !== mostPopularArticle?.id
).slice(0, 8); // M√°ximo 8 para el carrusel

// Procesar categor√≠as
const rawCategories = safeArray(articlesData.categories);
const safeCategories = rawCategories.map((cat, index) => ({
  id: safeString(cat.id, `category-${index}`),
  name: safeString(cat.name || cat.title || cat.display_name, 'Categor√≠a sin nombre'),
  slug: safeString(cat.slug, `categoria-${index}`),
  url: safeString(cat.url, `#categoria-${index}`),
  articleCount: safeNumber(cat.articleCount || cat.count, 0),
  description: safeString(cat.description, 'Explora art√≠culos sobre este tema'),
  featured: Boolean(cat.featured),
  thumbnail: safeString(cat.thumbnail, 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=400&h=300&fit=crop'),
  icon: safeString(cat.icon, 'üì∞'),
  recentArticles: safeArray(cat.recentArticles, [])
}));

// Procesar estad√≠sticas - Priorizar datos del backend
const rawStats = safeObject(articlesData.stats);
const safeStats = {
  totalArticles: rawStats.totalArticles || rawStats.total_articles || allArticles.length,
  totalReads: rawStats.totalReads || rawStats.total_reads || rawStats.totalViews || rawStats.total_views || '6.9K+',
  avgRating: rawStats.avgRating || rawStats.avg_rating || rawStats.rating || 4.8,
  publishedThisMonth: rawStats.publishedThisMonth || rawStats.published_this_month || rawStats.thisMonth || rawStats.this_month || 3,
  totalCategories: rawStats.totalCategories || rawStats.total_categories || safeCategories.length,
  totalViews: rawStats.totalViews || rawStats.total_views || '6921'
};

// Procesar SEO - Priorizar datos del backend
const rawSeo = safeObject(articlesData.seo);
const safeSeo = {
  title: safeString(rawSeo.title) || text.title,
  description: safeString(rawSeo.description) || text.subtitle,
  h1: safeString(rawSeo.h1) || text.title,
  h2: safeString(rawSeo.h2) || text.subtitle,
  canonical_url: safeString(rawSeo.canonical_url, language === 'es' ? '/articulos' : `/${language}/articles`),
  ogImage: safeString(rawSeo.ogImage || rawSeo.open_graph?.image, '/og-articles.jpg'),
  keywords: safeString(rawSeo.keywords),
  hreflang: safeObject(rawSeo.hreflang),
};

// ===================================================================
// TEXTOS POR IDIOMA
// ===================================================================

const TEXTS = {
  es: {
    title: 'Blog Inmobiliario CLIC',
    subtitle: 'Gu√≠as, consejos y an√°lisis expertos para tomar las mejores decisiones inmobiliarias en Rep√∫blica Dominicana',
    mostPopularTitle: 'Art√≠culo M√°s Popular',
    recentArticlesTitle: 'Art√≠culos Recientes',
    categoriesTitle: 'Explora por Categor√≠as',
    readMore: 'Leer art√≠culo completo',
    readingTime: 'min de lectura',
    views: 'lecturas',
    author: 'Por',
    seeCategory: 'Ver categor√≠a',
    statsLabels: {
      articles: 'Art√≠culos publicados',
      reads: 'Lecturas totales',
      rating: 'Calificaci√≥n promedio',
      thisMonth: 'Nuevos este mes'
    }
  },
  en: {
    title: 'CLIC Real Estate Blog',
    subtitle: 'Expert guides, tips and analysis to make the best real estate decisions in Dominican Republic',
    mostPopularTitle: 'Most Popular Article',
    recentArticlesTitle: 'Recent Articles',
    categoriesTitle: 'Browse by Categories',
    readMore: 'Read full article',
    readingTime: 'min read',
    views: 'views',
    author: 'By',
    seeCategory: 'View category',
    statsLabels: {
      articles: 'Published articles',
      reads: 'Total reads',
      rating: 'Average rating',
      thisMonth: 'New this month'
    }
  },
  fr: {
    title: 'Blog Immobilier CLIC',
    subtitle: 'Guides, conseils et analyses d\'experts pour prendre les meilleures d√©cisions immobili√®res en R√©publique dominicaine',
    mostPopularTitle: 'Article Le Plus Populaire',
    recentArticlesTitle: 'Articles R√©cents',
    categoriesTitle: 'Parcourir par Cat√©gories',
    readMore: 'Lire l\'article complet',
    readingTime: 'min de lecture',
    views: 'vues',
    author: 'Par',
    seeCategory: 'Voir la cat√©gorie',
    statsLabels: {
      articles: 'Articles publi√©s',
      reads: 'Lectures totales',
      rating: 'Note moyenne',
      thisMonth: 'Nouveaux ce mois'
    }
  }
};

const text = TEXTS[language] || TEXTS.es;

// URLs seg√∫n idioma
const routes = {
  es: {
    contact: '/contacto',
    properties: '/comprar',
    articlesBase: '/articulos'
  },
  en: {
    contact: '/en/contact',
    properties: '/en/buy',
    articlesBase: '/en/articles'
  },
  fr: {
    contact: '/fr/contact',
    properties: '/fr/acheter',
    articlesBase: '/fr/articles'
  }
};

const currentRoutes = routes[language] || routes.es;

// Funci√≥n para formatear fecha
function formatDate(dateString) {
  try {
    const date = new Date(dateString);
    if (isNaN(date.getTime())) {
      return language === 'en' ? 'Recent' : language === 'fr' ? 'R√©cent' : 'Reciente';
    }
    
    const months = {
      es: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
      en: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
      fr: ['Janvier', 'F√©vrier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Ao√ªt', 'Septembre', 'Octobre', 'Novembre', 'D√©cembre']
    };
    
    const monthNames = months[language] || months.es;
    return `${date.getDate()} de ${monthNames[date.getMonth()]} ${date.getFullYear()}`;
  } catch (error) {
    return language === 'en' ? 'Recent' : language === 'fr' ? 'R√©cent' : 'Reciente';
  }
}

// ===================================================================
// PREPARAR PROPS PARA LAYOUT
// ===================================================================

const layoutProps = {
  title: safeSeo.title || text.title,
  description: safeSeo.description || text.subtitle,
  ogImage: safeSeo.ogImage || '/og-articles.jpg',
  canonical: safeSeo.canonical_url,
  keywords: safeSeo.keywords,
  hreflangData: safeSeo.hreflang || {},
  globalConfig: data?.globalConfig || articlesData?.globalConfig || {},
  language: language,
  trackingString: articlesData?.trackingString || '',
  hotItems: articlesData?.hotItems || {},
  country: articlesData?.country || {}
};

console.log('‚úÖ ArticlesMainLayout preparado:', {
  language,
  totalArticles: safeStats.totalArticles,
  mostPopularArticle: mostPopularArticle?.title,
  carouselArticlesCount: carouselArticles.length,
  categoriesCount: safeCategories.length,
  totalViews: safeStats.totalViews
});
---

<Layout {...layoutProps}>
  <div class="min-h-screen bg-gray-50">
    
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-[#f04e00] to-[#ff7a3d] py-16">
      <div class="container mx-auto px-4">
        <div class="text-center text-white">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            {safeSeo.h1 || safeSeo.title || text.title}
          </h1>
          <p class="text-xl max-w-3xl mx-auto mb-8 text-white/90">
            {safeSeo.h2 || safeSeo.description || text.subtitle}
          </p>
          
          <!-- Stats -->
          <div class="flex flex-wrap justify-center gap-8 mt-10">
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">{safeStats.totalArticles}+</div>
              <div class="text-sm text-white/80">{text.statsLabels.articles}</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">{Math.floor(safeStats.totalViews / 1000).toLocaleString()}K+</div>
              <div class="text-sm text-white/80">{text.statsLabels.reads}</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">{safeStats.avgRating}/5</div>
              <div class="text-sm text-white/80">{text.statsLabels.rating}</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">{safeStats.publishedThisMonth}</div>
              <div class="text-sm text-white/80">{text.statsLabels.thisMonth}</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Most Popular Article -->
    {mostPopularArticle && (
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {text.mostPopularTitle}
            </h2>
            <div class="w-24 h-1 bg-[#f04e00] mx-auto rounded-full"></div>
          </div>
          
          <div class="max-w-4xl mx-auto">
            <article class="bg-white rounded-2xl shadow-2xl overflow-hidden">
              <!-- Featured Image -->
              <div class="aspect-[16/9] relative overflow-hidden">
                <img 
                  src={mostPopularArticle.featuredImage} 
                  alt={mostPopularArticle.title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                
                <!-- Stats overlay -->
                <div class="absolute top-6 right-6 flex gap-4">
                  <div class="bg-white/90 backdrop-blur-sm text-gray-900 px-4 py-2 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    {mostPopularArticle.views.toLocaleString()} {text.views}
                  </div>
                  <div class="bg-[#f04e00] text-white px-4 py-2 rounded-full text-sm font-medium">
                    {mostPopularArticle.readTime} {text.readingTime}
                  </div>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-8 md:p-12">
                <div class="flex items-center gap-4 mb-6">
                  <img 
                    src={mostPopularArticle.author.avatar} 
                    alt={mostPopularArticle.author.name}
                    class="w-12 h-12 rounded-full"
                  />
                  <div>
                    <p class="text-sm font-medium text-gray-900">{mostPopularArticle.author.name}</p>
                    <p class="text-xs text-gray-500">{formatDate(mostPopularArticle.publishedAt)}</p>
                  </div>
                </div>
                
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 leading-tight">
                  {mostPopularArticle.title}
                </h1>
                
                {mostPopularArticle.subtitle && (
                  <h2 class="text-xl text-gray-600 mb-6 font-medium">
                    {mostPopularArticle.subtitle}
                  </h2>
                )}
                
                <p class="text-lg text-gray-700 leading-relaxed mb-8">
                  {mostPopularArticle.excerpt}
                </p>
                
                <a 
                  href={mostPopularArticle.url}
                  class="inline-flex items-center gap-3 bg-[#f04e00] text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-[#d94400] transition-all duration-300 hover:scale-105 hover:shadow-lg"
                >
                  {text.readMore}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          </div>
        </div>
      </section>
    )}

    <!-- Recent Articles Carousel -->
    {carouselArticles.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {text.recentArticlesTitle}
            </h2>
            <div class="w-24 h-1 bg-[#f04e00] mx-auto rounded-full"></div>
          </div>
          
          <div class="overflow-x-auto">
            <div class="flex gap-6 pb-4" style="width: max-content;">
              {carouselArticles.map((article, index) => (
                <article class="w-80 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden flex-shrink-0" key={article.id}>
                  <a href={article.url} class="group block">
                    <!-- Image -->
                    <div class="aspect-[16/9] relative overflow-hidden">
                      <img 
                        src={article.featuredImage} 
                        alt={article.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                      
                      <!-- Read time -->
                      <div class="absolute bottom-4 right-4 bg-white/90 text-gray-900 px-3 py-1 rounded-full text-sm font-medium">
                        {article.readTime} {text.readingTime}
                      </div>
                    </div>
                    
                    <!-- Content -->
                    <div class="p-6">
                      <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2 group-hover:text-[#f04e00] transition-colors">
                        {article.title}
                      </h3>
                      
                      <p class="text-gray-600 mb-4 line-clamp-3 text-sm">
                        {article.excerpt}
                      </p>
                      
                      <div class="flex items-center justify-between text-sm text-gray-500">
                        <div class="flex items-center gap-2">
                          <img 
                            src={article.author.avatar} 
                            alt={article.author.name}
                            class="w-6 h-6 rounded-full"
                          />
                          <span>{article.author.name}</span>
                        </div>
                        <span>{article.views.toLocaleString()} {text.views}</span>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Categories Grid -->
    {safeCategories.length > 0 && (
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {text.categoriesTitle}
            </h2>
            <div class="w-24 h-1 bg-[#f04e00] mx-auto rounded-full"></div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {safeCategories.map((category, index) => (
              <a 
                href={`${currentRoutes.articlesBase}/${category.slug}`}
                class="group bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 hover:shadow-xl transition-all duration-300 hover:scale-105 border border-gray-200 hover:border-[#f04e00]/20"
                key={category.id}
              >
                <div class="text-center">
                  <div class="w-16 h-16 bg-[#f04e00] rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                    <span class="text-2xl text-white">{category.icon}</span>
                  </div>
                  
                  <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-[#f04e00] transition-colors">
                    {category.name}
                  </h3>
                  
                  <p class="text-gray-600 mb-4 text-sm">
                    {category.description}
                  </p>
                  
                  <div class="flex items-center justify-center gap-2 text-sm text-gray-500">
                    <span class="bg-[#f04e00]/10 text-[#f04e00] px-3 py-1 rounded-full font-medium">
                      {category.articleCount} art√≠culos
                    </span>
                  </div>
                  
                  <div class="mt-4 inline-flex items-center gap-2 text-[#f04e00] group-hover:gap-3 transition-all font-medium">
                    {text.seeCategory}
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

  </div>
</Layout>

