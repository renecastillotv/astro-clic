    </section>
  )}

  <!-- Top Agentes en Ventas -->
  {topAgents.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{text.topAgentsTitle}</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">{text.topAgentsSubtitle}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
          {topAgents.map((agent) => (
            <div class="bg-white rounded-lg p-6 text-center">
              {/* Avatar o Iniciales */}
              <div class="mb-4">
                {agent.avatar && agent.avatar !== '/images/team/default-advisor.jpg' ? (
                  <img 
                    src={agent.avatar} 
                    alt={agent.name}
                    class="w-20 h-20 rounded-full mx-auto object-cover"
                  />
                ) : (
                  <div class="w-20 h-20 rounded-full bg-[#f04e00] text-white flex items-center justify-center text-2xl font-bold mx-auto">
                    {getInitials(agent.name)}
                  </div>
                )}
              </div>
              <h3 class="font-semibold text-gray-900 mb-1">{agent.name}</h3>
              <p class="text-sm text-gray-600 mb-3">{agent.position}</p>
              <div class="space-y-1 mb-4">
                <p class="text-2xl font-bold text-[#f04e00]">{agent.totalSales}</p>
