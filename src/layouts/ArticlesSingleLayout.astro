                        {property.bathrooms > 0 && (
                          <div class="flex items-center gap-1 text-gray-600">
                            <i class="fas fa-bath text-[#f04e00] text-sm"></i>
                            <span class="text-xs font-medium">{property.bathrooms}</span>
                          </div>
