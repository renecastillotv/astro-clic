    listTitle: 'Lista de Favoritos',
    viewingAs: 'Viendo como:',
    propertiesCount: 'propiedades',
    addComment: 'Agregar comentario',
    commentPlaceholder: 'Escribe tu opini√≥n sobre esta propiedad...',
    saveComment: 'Guardar comentario',
    cancel: 'Cancelar',
