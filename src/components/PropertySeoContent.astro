---
// src/components/PropertySeoContent.astro - ESTILO NATIVO PARA SEO
export interface Props {
  data: any;
  searchContext?: {
    location?: string;
    propertyType?: string;
    operation?: string;
  };
}

const { data, searchContext = {} } = Astro.props;

// Función para limpiar texto SEO
function cleanSeoText(text) {
  if (!text) return '';
  
  return text
    .replace(/\*\*(.*?)\*\*/g, '$1')
    .replace(/<[^>]*>/g, '') // Remover TODAS las etiquetas HTML del texto
    .replace(/&nbsp;/g, ' ')
    .replace(/&amp;/g, '&')
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>')
    .replace(/&quot;/g, '"')
    .replace(/&#39;/g, "'")
    .replace(/\s+/g, ' ')
    .trim();
}

// Función para limpiar HTML manteniendo estructura semántica
function cleanSeoContent(htmlContent) {
  if (!htmlContent) return '';
  
  return htmlContent
    .replace(/\r\n/g, '\n')
    .replace(/\n\n+/g, '\n\n')
    .replace(/style\s*=\s*["'][^"']*["']/gi, '') // Remover estilos
    .replace(/class\s*=\s*["'][^"']*["']/gi, '') // Remover clases
    .replace(/<span[^>]*>/gi, '') // Remover spans
    .replace(/<\/span>/gi, '')
    .replace(/<div[^>]*>/gi, '<p>') // Convertir divs a párrafos
    .replace(/<\/div>/gi, '</p>')
    .replace(/<p><\/p>/gi, '') // Remover párrafos vacíos
    .trim();
}

// Buscar contenido SEO en múltiples ubicaciones
let seoContentItems = [];

if (data?.content?.seo_content && Array.isArray(data.content.seo_content)) {
  seoContentItems = data.content.seo_content;
} else if (data?.relatedContent?.seo_content && Array.isArray(data.relatedContent.seo_content)) {
  seoContentItems = data.relatedContent.seo_content;
} else if (data?.seo_content && Array.isArray(data.seo_content)) {
  seoContentItems = data.seo_content;
}

// Filtrar y validar contenido
const validSeoItems = seoContentItems
  .filter(item => {
    const hasContent = item?.content || item?.seo_content;
    const hasTitle = item?.title || item?.h1_title;
    const isRightType = !item.content_type || 
                       item.content_type === 'seo_content' || 
                       item.content_type === 'article';
    
    return hasContent && hasTitle && isRightType;
  })
  .slice(0, 3); // Máximo 3 artículos

// Limpiar y estructurar contenido
const cleanedSeoItems = validSeoItems.map((item, index) => {
  const cleanContent = cleanSeoContent(item.seo_content || item.content);
  const cleanTitle = cleanSeoText(item.title || item.h1_title);
  
  return {
    ...item,
    title: cleanTitle,
    h2_subtitle: cleanSeoText(item.h2_subtitle),
    description: cleanSeoText(item.description),
    content: cleanContent,
    wordCount: cleanContent.replace(/<[^>]*>/g, '').split(/\s+/).length,
    readingTime: Math.ceil(cleanContent.replace(/<[^>]*>/g, '').split(/\s+/).length / 200)
  };
});

// Generar título contextual único para cada combinación
function generateContextualTitle() {
  const { location, propertyType, operation } = searchContext;
  
  if (location && propertyType && operation) {
    return `${operation === 'comprar' ? 'Comprar' : 'Alquilar'} ${propertyType}s en ${location}: Guía Especializada 2024`;
  } else if (location && propertyType) {
    return `${propertyType}s en ${location}: Todo lo que Necesitas Saber`;
  } else if (location && operation) {
    return `${operation === 'comprar' ? 'Comprar' : 'Alquilar'} Propiedades en ${location}: Guía Completa`;
  } else if (propertyType && operation) {
    return `${operation === 'comprar' ? 'Comprar' : 'Alquilar'} ${propertyType}s: Análisis del Mercado`;
  } else if (location) {
    return `Mercado Inmobiliario en ${location}: Oportunidades y Tendencias`;
  } else if (propertyType) {
    return `${propertyType}s en República Dominicana: Guía de Inversión`;
  } else {
    return 'Mercado Inmobiliario: Análisis y Oportunidades';
  }
}

const contextualTitle = generateContextualTitle();
---

{cleanedSeoItems.length > 0 && (
  <!-- Contenido SEO nativo - sin bordes ni fondos especiales -->
  <section 
    class="py-16 bg-gray-50" 
    itemscope 
    itemtype="https://schema.org/Article"
  >
    <div class="container mx-auto px-4">
      <!-- ✅ USAR TODO EL ANCHO DISPONIBLE -->
      <div class="max-w-7xl mx-auto">
        
        <!-- ✅ TÍTULO CONTEXTUAL SIN DECORACIONES EXTRA -->
        <header class="mb-12">
