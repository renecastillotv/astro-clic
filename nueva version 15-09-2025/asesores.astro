<Layout 
  title="Asesores Inmobiliarios Expertos - CLIC" 
  description="Conoce a nuestro equipo de asesores inmobiliarios especializados. Más de 100 años de experiencia combinada ayudando a encontrar propiedades en República Dominicana"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-[#f04e00] to-[#ff7a3d] py-16">
    <div class="container mx-auto px-4">
      <div class="text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Nuestro Equipo de Expertos
        </h1>
        <p class="text-xl max-w-3xl mx-auto mb-8 text-white/90">
          Asesores especializados con más de 100 años de experiencia combinada 
          ayudando a familias e inversionistas a encontrar la propiedad perfecta
        </p>
        
        {/* Stats del equipo */}
        <div class="flex flex-wrap justify-center gap-8 mt-10">
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">${totalSales}M+</div>
            <div class="text-sm text-white/80">En ventas totales</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">{totalProperties}+</div>
            <div class="text-sm text-white/80">Propiedades vendidas</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">{avgRating.toFixed(1)}/5</div>
            <div class="text-sm text-white/80">Calificación promedio</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">{asesores.length}</div>
            <div class="text-sm text-white/80">Asesores expertos</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Advisors -->
  {featuredAdvisors.length > 0 && (
    <section class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">Asesores Destacados</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {featuredAdvisors.map((asesor) => (
            <a 
              href={`/asesores/${asesor.slug}`}
              class="group block"
            >
              <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
                <div class="relative">
                  {/* Background gradient */}
                  <div class="bg-gradient-to-r from-[#f04e00] to-[#ff7a3d] p-8">
                    <div class="flex items-center gap-6">
                      <img 
                        src={asesor.avatar} 
                        alt={asesor.name}
                        class="w-24 h-24 rounded-full border-4 border-white object-cover group-hover:scale-105 transition-transform"
                      />
                      <div class="text-white">
                        <h3 class="text-2xl font-bold mb-2">{asesor.name}</h3>
                        <p class="text-lg text-white/90 mb-3">{asesor.title}</p>
                        <div class="flex items-center gap-2">
                          <div class="flex">
                            {Array.from({length: 5}, (_, i) => (
                              <svg class={`w-5 h-5 ${i < Math.floor(asesor.rating) ? 'text-yellow-300' : 'text-white/30'}`} fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                              </svg>
                            ))}
                          </div>
                          <span class="text-white/90 text-sm">({asesor.reviewCount} reseñas)</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  {/* Featured badge */}
                  <span class="absolute top-4 right-4 bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full text-sm font-medium">
                    ⭐ Destacado
                  </span>
                </div>
                
                <div class="p-6">
                  {/* Stats */}
                  <div class="grid grid-cols-3 gap-4 mb-6">
                    <div class="text-center">
                      <div class="text-xl font-bold text-[#f04e00]">{asesor.totalSales}</div>
                      <div class="text-xs text-gray-600">En ventas</div>
                    </div>
                    <div class="text-center">
                      <div class="text-xl font-bold text-[#f04e00]">{asesor.propertiesSold}</div>
                      <div class="text-xs text-gray-600">Propiedades</div>
                    </div>
                    <div class="text-center">
                      <div class="text-xl font-bold text-[#f04e00]">{asesor.avgDays}</div>
                      <div class="text-xs text-gray-600">Días promedio</div>
                    </div>
                  </div>
                  
                  {/* Bio */}
                  <p class="text-gray-600 mb-4">{asesor.bio}</p>
                  
                  {/* Specialties */}
