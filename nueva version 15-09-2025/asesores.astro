                    <h4 class="text-sm font-semibold text-gray-900 mb-2">Especialidades:</h4>
                    <div class="flex flex-wrap gap-2">
                      {asesor.specialties.slice(0, 3).map(specialty => (
                        <span class="bg-[#f04e00]/10 text-[#f04e00] px-2 py-1 rounded text-xs">
                          {specialty}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  {/* Recent testimonial */}
                  {asesor.recentTestimonial && (
                    <div class="bg-gray-50 rounded-lg p-4 mb-4">
                      <blockquote class="text-sm text-gray-700 italic mb-2">
                        "{asesor.recentTestimonial.text}"
                      </blockquote>
                      <cite class="text-xs text-gray-600">- {asesor.recentTestimonial.author}</cite>
                    </div>
                  )}
                  
                  {/* Contact buttons */}
                  <div class="flex gap-2">
                    <span class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-[#f04e00] text-white rounded-lg text-sm font-medium group-hover:bg-[#d94400] transition-colors">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                      Ver perfil completo
                    </span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

