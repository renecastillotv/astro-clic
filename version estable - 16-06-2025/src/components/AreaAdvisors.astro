---
export interface Props {
  advisors: Array<{
    slug: string;
    name: string;
    title: string;
    avatar: string;
    specialties: string[];
    areas: string[];
    languages: string[];
    phone: string;
    whatsapp?: string;
    email: string;
    rating?: number;
    reviewCount?: number;
    yearsExperience?: number;
  }>;
  title?: string;
  location?: string;
}

const { advisors, title = "Asesores Especializados", location } = Astro.props;

if (!advisors || advisors.length === 0) return null;

const contextualTitle = location ? `${title} en ${location}` : title;
---

<section class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">{contextualTitle}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {advisors.map((advisor) => (
        <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <div class="text-center mb-4">
              <img 
                src={advisor.avatar} 
                alt={advisor.name}
                class="w-24 h-24 rounded-full mx-auto mb-4 object-cover"
              />
              <h3 class="text-lg font-semibold text-gray-900">{advisor.name}</h3>
              <p class="text-sm text-gray-600">{advisor.title}</p>
              
              {advisor.rating && (
                <div class="flex items-center justify-center gap-1 mt-2">
                  <div class="flex items-center">
                    {[...Array(5)].map((_, i) => (
                      <svg 
                        class={`w-4 h-4 ${i < Math.floor(advisor.rating) ? 'text-yellow-400' : 'text-gray-300'}`}
                        fill="currentColor" 
                        viewBox="0 0 24 24"
                      >
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm text-gray-600">({advisor.reviewCount})</span>
                </div>
              )}
            </div>
            
            <div class="space-y-3 mb-4">
              {advisor.specialties.length > 0 && (
                <div>
                  <p class="text-xs font-medium text-gray-500 mb-1">Especialidades:</p>
                  <div class="flex flex-wrap gap-1">
                    {advisor.specialties.map(specialty => (
                      <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
                        {specialty}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              
              {advisor.areas.length > 0 && (
                <div>
                  <p class="text-xs font-medium text-gray-500 mb-1">Zonas:</p>
                  <p class="text-sm text-gray-700">{advisor.areas.join(', ')}</p>
                </div>
              )}
              
              {advisor.languages.length > 0 && (
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                  </svg>
                  <span>{advisor.languages.join(', ')}</span>
                </div>
              )}
              
              {advisor.yearsExperience && (
                <p class="text-sm text-gray-600">
                  {advisor.yearsExperience} a√±os de experiencia
                </p>
              )}
            </div>
            
            <div class="space-y-2">
              <a 
                href={`/asesores/${advisor.slug}`}
                class="block w-full text-center bg-[#f04e00] text-white py-2 rounded-md hover:bg-[#d94400] transition-colors"
              >
                Ver perfil
              </a>
              
              {advisor.whatsapp && (
                <a 
                  href={`https://wa.me/${advisor.whatsapp}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full text-center border border-gray-300 py-2 rounded-md hover:bg-gray-50 transition-colors flex items-center justify-center gap-2"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                  </svg>
                  WhatsApp
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>