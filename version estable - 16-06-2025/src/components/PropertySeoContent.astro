};

const tipoSEOData = {
  'villa': {
    name: 'Villa',
    investmentProfile: 'propiedades premium con ROI 8-12% anual en rentas',
    targetGuests: 'familias grandes, grupos de amigos, eventos especiales',
    uniqueFeatures: 'piscina privada, jardín tropical, máxima privacidad',
    priceRange: '$200-800/noche según ubicación y amenidades',
    bookingPatterns: 'estadías promedio 5-7 noches, alta repetición de huéspedes'
  },
  'apartamento': {
    name: 'Apartamento',
    investmentProfile: 'inversión accesible con gestión simplificada',
    targetGuests: 'parejas, familias pequeñas, viajeros de negocios',
    uniqueFeatures: 'amenidades del edificio, seguridad 24/7, ubicación central',
    priceRange: '$80-300/noche con servicios incluidos',
    bookingPatterns: 'estadías flexibles 2-14 noches, mercado internacional'
  },
  'casa': {
    name: 'Casa',
    investmentProfile: 'estabilidad de renta con uso dual familiar/comercial',
    targetGuests: 'familias con niños, estadías largas, huéspedes locales',
    uniqueFeatures: 'ambiente hogareño, espacios familiares, cocina completa',
    priceRange: '$120-400/noche ideal para grupos medianos',
    bookingPatterns: 'estadías largas promedio 7-14 noches, temporadas extendidas'
  },
  'lujo': {
    name: 'Propiedad de Lujo',
    investmentProfile: 'activos de prestigio con yields premium 10-15%',
    targetGuests: 'ultra-high-net-worth, celebridades, eventos corporativos',
    uniqueFeatures: 'servicios concierge, chef privado, ubicaciones exclusivas',
    priceRange: '$500-2000+/noche con servicios premium incluidos',
    bookingPatterns: 'reservas advance, estadías premium, clientes recurrentes VIP'
  }
};

// Obtener datos contextuales
const destinoInfo = destino ? destinoSEOData[destino] : null;
const tipoInfo = tipo ? tipoSEOData[tipo] : null;

// Función para generar FAQs específicas de la propiedad
const generatePropertyFAQs = () => {
  return [
    {
      id: 'disponibilidad-precios',
      question: `¿Cuál es la disponibilidad y precios de ${property.titulo}?`,
      answer: `${property.titulo} tiene un precio de ${property.precio} por noche. La disponibilidad varía según temporada, con mayor demanda en ${destinoInfo?.seasonality || 'temporada alta diciembre-abril'}. Para consultar disponibilidad específica y obtener descuentos por estadías largas, contacta directamente al propietario.`,
      category: 'reservas'
    },
    {
      id: 'que-incluye-propiedad',
      question: `¿Qué incluye exactamente ${property.titulo}?`,
      answer: `Esta ${tipoInfo?.name.toLowerCase() || 'propiedad'} de ${property.habitaciones} habitaciones y ${property.banos} baños incluye ${property.amenidades?.slice(0, 5).join(', ') || 'amenidades premium'}. La capacidad máxima es ${property.capacidad} huéspedes. ${tipoInfo?.uniqueFeatures || 'Incluye todas las comodidades para una estadía perfecta'}.`,
      category: 'amenidades'
    },
    {
      id: 'ubicacion-ventajas',
      question: `¿Por qué elegir esta propiedad en ${destinoInfo?.name || property.destino}?`,
      answer: `${property.titulo} está ubicada en ${destinoInfo?.name || property.destino}, ${destinoInfo?.seoDescription || 'una zona premium'}. ${destinoInfo?.transportation || 'Excelente conectividad'}. Cerca de ${destinoInfo?.nearbyAttractions?.slice(0, 3).join(', ') || 'principales atracciones'}. ${destinoInfo?.marketInfo || 'Zona de alta demanda turística'}.`,
      category: 'ubicacion'
    },
    {
      id: 'reserva-proceso',
      question: `¿Cómo reservar ${property.titulo}?`,
      answer: `Para reservar ${property.titulo}, contacta directamente al propietario a través del formulario o WhatsApp. El proceso incluye: consulta de disponibilidad, confirmación de fechas, depósito de reserva, y recepción de información detallada de check-in. ${tipoInfo?.bookingPatterns || 'Proceso simple y directo'}.`,
      category: 'proceso'
    },
    {
      id: 'cancelacion-politicas',
      question: '¿Cuáles son las políticas de cancelación?',
      answer: `Las políticas de cancelación varían según el propietario y temporada. Generalmente: cancelación gratuita hasta 7-14 días antes del check-in, depósito de reserva reembolsable según términos, y condiciones especiales para temporada alta. Consulta las políticas específicas al momento de reservar.`,
      category: 'politicas'
    }
  ];
};

// Función para generar artículos relacionados específicos
const generatePropertyArticles = () => {
  return [
    {
      slug: `guia-completa-${destino || 'destino'}-2024`,
      title: `Guía Completa ${destinoInfo?.name || property.destino} 2024: Mejores ${tipoInfo?.name.toLowerCase() || 'Propiedades'}`,
      excerpt: `Todo lo que necesitas saber sobre ${tipoInfo?.name.toLowerCase() || 'propiedades'} en ${destinoInfo?.name || property.destino}. Precios, ubicaciones, amenidades y consejos de expertos locales.`,
      featuredImage: property.imagen,
      author: { name: 'Expertos CLIC', avatar: '/images/team/clic-experts.jpg' },
      publishedAt: '2024-03-15',
      readTime: '12 min',
      category: 'Guías de Destino',
      views: '3,2K'
    },
    {
      slug: `invertir-${tipo || 'propiedades'}-${destino || 'rd'}`,
      title: `Invertir en ${tipoInfo?.name || 'Propiedades'} ${destinoInfo?.name || property.destino}: ROI y Oportunidades 2024`,
      excerpt: `Análisis completo del mercado de ${tipoInfo?.name.toLowerCase() || 'propiedades'} en ${destinoInfo?.name || property.destino}. ${tipoInfo?.investmentProfile || 'Oportunidades de inversión con retornos atractivos'}.`,
      featuredImage: property.imagen,
      author: { name: 'Analistas CLIC', avatar: '/images/team/analysts.jpg' },
      publishedAt: '2024-03-10',
      readTime: '15 min',
      category: 'Análisis de Inversión',
      views: '2,8K'
    },
    {
      slug: `experiencias-${destino || 'caribe'}-lujo`,
      title: `Experiencias Únicas en ${destinoInfo?.name || property.destino}: Más Allá del Alojamiento`,
      excerpt: `Descubre ${destinoInfo?.nearbyAttractions?.join(', ') || 'actividades exclusivas'}. ${destinoInfo?.demographics || 'Experiencias diseñadas para huéspedes exigentes'}.`,
      featuredImage: property.imagen,
      author: { name: 'Concierge CLIC', avatar: '/images/team/concierge.jpg' },
      publishedAt: '2024-03-05',
      readTime: '10 min',
      category: 'Experiencias',
      views: '1,9K'
    }
  ];
};

const propertyFAQs = generatePropertyFAQs();
const propertyArticles = generatePropertyArticles();
---

<!-- SEO Content especializado para propiedades individuales -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      
      <!-- Contenido SEO principal -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-16">
        
        <!-- Contenido principal - 2 columnas -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Todo sobre {property.titulo}: Tu {tipoInfo?.name || 'Propiedad'} Perfecta en {destinoInfo?.name || property.destino}
          </h2>
          
          <!-- Información detallada de la propiedad -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">¿Por qué elegir {property.titulo}?</h3>
            <p class="text-gray-700 mb-4">
              {property.titulo} es una {tipoInfo?.name.toLowerCase() || 'propiedad'} excepcional ubicada en {destinoInfo?.name || property.destino}, 
              {destinoInfo?.seoDescription || 'una zona premium del Caribe'}. Con {property.habitaciones} habitaciones y capacidad para {property.capacidad} huéspedes, 
              es perfecta para {tipoInfo?.targetGuests || 'familias y grupos que buscan comodidad'}.
            </p>
            <p class="text-gray-700 mb-4">
              La propiedad ofrece {tipoInfo?.uniqueFeatures || 'amenidades premium'} en un entorno que garantiza 
              {destinoInfo?.marketInfo || 'una experiencia vacacional única'}. Su ubicación estratégica te permite acceder fácilmente a 
              {destinoInfo?.nearbyAttractions?.slice(0, 3).join(', ') || 'las principales atracciones de la zona'}.
            </p>
            
            {property.amenidades && (
              <div class="bg-blue-50 p-6 rounded-lg mb-6">
                <h4 class="font-semibold text-blue-900 mb-3">Amenidades Premium Incluidas</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                  {property.amenidades.map(amenidad => (
                    <div class="flex items-center gap-2 text-sm text-blue-800">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {amenidad}
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Información del área y ubicación -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Ubicación Privilegiada en {destinoInfo?.name || property.destino}</h3>
            <p class="text-gray-700 mb-4">
              {destinoInfo?.name || property.destino} es reconocido como {destinoInfo?.seoDescription || 'uno de los destinos más exclusivos del Caribe'}. 
              {destinoInfo?.transportation || 'Con excelente conectividad'}, es el destino preferido por 
              {destinoInfo?.demographics || 'viajeros exigentes de todo el mundo'}.
            </p>
            <p class="text-gray-700 mb-4">
              Durante tu estadía en {property.titulo}, tendrás acceso inmediato a {destinoInfo?.nearbyAttractions?.join(', ') || 'actividades premium'}. 
              {destinoInfo?.seasonality || 'La zona mantiene alta demanda durante todo el año'}, lo que garantiza una experiencia completa 
              sin importar cuándo decidas visitarnos.
            </p>
          </div>

          <!-- Información de precios y valor -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Precios y Valor Excepcional</h3>
            <p class="text-gray-700 mb-4">
              Con un precio de {property.precio} por noche, {property.titulo} ofrece un valor excepcional considerando 
              {tipoInfo?.priceRange || 'el rango de precios en la zona'}. {tipoInfo?.investmentProfile || 'Las propiedades en esta categoría mantienen alta demanda'}, 
              asegurando disponibilidad limitada especialmente en temporadas altas.
            </p>
            <p class="text-gray-700 mb-4">
              {tipoInfo?.bookingPatterns || 'Los huéspedes típicamente reservan con anticipación'} debido a la calidad excepcional y ubicación privilegiada. 
              Para obtener las mejores tarifas y disponibilidad, recomendamos contactar directamente al propietario con al menos 30 días de anticipación.
            </p>
          </div>

          <!-- Experiencias y actividades recomendadas -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Experiencias Únicas Desde {property.titulo}</h3>
            <p class="text-gray-700 mb-4">
              Desde {property.titulo}, tendrás acceso privilegiado a experiencias que solo {destinoInfo?.name || property.destino} puede ofrecer. 
              {destinoInfo?.nearbyAttractions?.length ? `Las atracciones principales incluyen ${destinoInfo.nearbyAttractions.join(', ')}, ` : ''}
              cada una con su propia personalidad y atractivos únicos.
            </p>
            
            {destinoInfo?.nearbyAttractions && (
              <div class="bg-green-50 p-6 rounded-lg mb-6">
                <h4 class="font-semibold text-green-900 mb-3">Atracciones Cerca de {property.titulo}</h4>
                <ul class="space-y-2 text-sm text-green-800">
                  {destinoInfo.nearbyAttractions.map(attraction => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 text-green-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      </svg>
                      <a 
                        href={`/articulos/rentas-vacacionales/${attraction.toLowerCase().replace(/\s+/g, '-')}-${destinoInfo.name.toLowerCase().replace(/\s+/g, '-')}`}
                        class="hover:text-green-900 transition-colors underline"
                      >
                        {attraction}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>

          <!-- Proceso de reserva y contacto -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4">Cómo Reservar {property.titulo}</h3>
            <p class="text-gray-700 mb-4">
              El proceso de reserva para {property.titulo} es directo y personalizado. Contacta al propietario para discutir fechas, 
              necesidades específicas, y obtener información detallada sobre servicios adicionales disponibles. 
              {tipoInfo?.bookingPatterns || 'La mayoría de huéspedes reservan con varias semanas de anticipación'}.
            </p>
            <p class="text-gray-700 mb-4">
              Para garantizar la mejor experiencia, recomendamos comunicar cualquier solicitud especial al momento de la reserva. 
              El propietario puede ayudarte a organizar servicios adicionales como transporte desde el aeropuerto, 
              compras pre-llegada, tours locales, y recomendaciones personalizadas basadas en tus intereses.
            </p>
          </div>
        </div>
        
        <!-- Sidebar - 1 columna -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            
            <!-- Quick Info de la propiedad -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl border border-blue-100">
              <h3 class="font-bold text-gray-900 mb-4 text-lg">Información Rápida</h3>
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Ubicación:</span>
                  <span class="font-medium">{property.destino}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Tipo:</span>
                  <span class="font-medium">{property.tipo}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Huéspedes:</span>
                  <span class="font-medium">Hasta {property.capacidad}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Habitaciones:</span>
                  <span class="font-medium">{property.habitaciones}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Baños:</span>
                  <span class="font-medium">{property.banos}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Rating:</span>
                  <span class="font-medium flex items-center gap-1">
                    {property.rating}
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>

            <!-- Propiedades similares -->
            {nearbyProperties.length > 0 && (
              <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl border border-green-100">
                <h3 class="font-bold text-gray-900 mb-4 text-lg">Propiedades Similares</h3>
                <div class="space-y-3">
                  {nearbyProperties.slice(0, 3).map(similarProperty => (
                    <a 
                      href={`/rentas-vacacionales/${similarProperty.tipo.toLowerCase().replace(/\s+/g, '-')}/${similarProperty.destino.toLowerCase().replace(/\s+/g, '-')}/${similarProperty.slug}`}
                      class="block p-3 bg-white rounded-lg hover:bg-gray-50 transition-colors group"
                    >
                      <h4 class="font-medium text-gray-900 group-hover:text-[#f04e00] transition-colors text-sm line-clamp-1">
                        {similarProperty.titulo}
                      </h4>
                      <p class="text-xs text-gray-600 mt-1">{similarProperty.habitaciones} hab • {similarProperty.capacidad} huéspedes</p>
                      <div class="flex items-center justify-between mt-2 text-xs">
                        <span class="text-[#f04e00] font-medium">{similarProperty.precio}</span>
                        <span class="flex items-center gap-1">
                          {similarProperty.rating}
                          <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.720c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        </span>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- CTA de contacto especializado -->
            <div class="bg-gradient-to-r from-[#f04e00] to-[#ff7a3d] p-6 rounded-xl text-white text-center">
              <h3 class="font-bold mb-3 text-lg">¿Interesado en {property.titulo}?</h3>
              <p class="text-sm mb-4 text-white/90">
                Contacta directamente al propietario para disponibilidad, precios especiales y servicios adicionales
              </p>
              <div class="space-y-3">
                <a 
                  href={`/contacto-propietario?propiedad=${property.slug}`}
                  class="block px-4 py-2 bg-white text-[#f04e00] rounded-lg hover:bg-gray-100 transition-colors font-medium text-sm"
                >
                  Consultar Disponibilidad
                </a>
                <a 
                  href={`https://wa.me/18095551234?text=Hola, estoy interesado en ${property.titulo}`}
                  class="block px-4 py-2 bg-white/20 text-white border border-white/30 rounded-lg hover:bg-white/30 transition-colors font-medium text-sm"
                >
                  WhatsApp Directo
                </a>
              </div>
              <p class="text-xs text-white/80 mt-3">
                Respuesta garantizada en menos de 2 horas
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FAQs específicas de la propiedad -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
        Preguntas Frecuentes sobre {property.titulo}
      </h2>
      
      <div class="space-y-4">
        {propertyFAQs.map((faq, index) => (
          <details class="group bg-white rounded-lg shadow-sm">
            <summary class="flex items-center justify-between cursor-pointer p-6 hover:bg-gray-50 transition-colors">
              <h3 class="text-lg font-medium text-gray-900 pr-4">{faq.question}</h3>
              <svg 
                class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform flex-shrink-0" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-gray-700 leading-relaxed">{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Artículos relacionados específicos de la propiedad -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
