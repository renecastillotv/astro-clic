---
// PropertySEOContent.astro - SEO especializado para propiedades individuales
export interface Props {
  property: any;
  nearbyProperties?: any[];
  destino?: string;
  tipo?: string;
}

const { property, nearbyProperties = [], destino, tipo } = Astro.props;

// Data específica para SEO de propiedades individuales
