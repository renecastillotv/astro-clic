  },
  'bavaro': {
    name: 'Bávaro',
    seoDescription: 'el centro neurálgico del turismo familiar en Punta Cana',
    marketInfo: 'zona con mayor rotación de huéspedes, ideal para rentas cortas',
    nearbyAttractions: ['Playa Bávaro', 'Scape Park', 'Centro Comercial Palma Real'],
    transportation: 'aeropuerto Punta Cana 15 minutos, transporte público abundante',
    demographics: 'familias con niños, grupos de amigos, turismo masivo',
