  },
  'las-terrenas': {
    name: 'Las Terrenas',
    seoDescription: 'el refugio bohemio-chic de la península de Samaná',
    marketInfo: 'mercado emergente con crecimiento 15% anual en rentas',
    nearbyAttractions: ['Playa Bonita', 'El Limón Waterfall', 'Playa Cosón'],
    transportation: 'aeropuerto El Catey a 45 minutos, fácil acceso desde Europa',
    demographics: 'europeos residentes, digital nomads, eco-travelers',
