---
export interface Props {
  articles: Array<{
    slug: string;
    title: string;
    excerpt: string;
    featuredImage?: string | null;
    author: {
      name: string;
      avatar?: string;
    };
    publishedAt: string;
    readTime: string;
    category: string;
    views?: string | number;
    featured?: boolean;
    // ‚úÖ Campos para ordenamiento
    total_weight?: number;
    content_priority?: string;
    sort_order?: number;
  }>;
  title?: string;
  subtitle?: string;
  layout?: 'grid' | 'featured';
  articlesStats?: {
    total_articles: number;
    last_updated: string;
  };
}

const { 
  articles: rawArticles = [], 
  title = "Art√≠culos que te pueden interesar", 
  subtitle = "Gu√≠as, an√°lisis y consejos expertos sobre bienes ra√≠ces",
  layout = 'grid',
  articlesStats
} = Astro.props;

if (!rawArticles || rawArticles.length === 0) return null;

// ‚úÖ ORDENAR ART√çCULOS POR RELEVANCIA Y LIMITAR A 6
const sortedArticles = rawArticles
  .sort((a, b) => {
    // 1. Prioridad: featured articles primero (solo si realmente est√°n marcados)
    if (a.featured && !b.featured) return -1;
    if (!a.featured && b.featured) return 1;
    
    // 2. Content priority: tag_related > high > medium > default
    const priorityOrder = { 'tag_related': 4, 'high': 3, 'medium': 2, 'default': 1 };
    const priorityA = priorityOrder[a.content_priority] || 1;
    const priorityB = priorityOrder[b.content_priority] || 1;
    
    if (priorityA !== priorityB) {
      return priorityB - priorityA; // Mayor prioridad primero
    }
    
    // 3. Total weight (mayor peso primero)
    const weightA = a.total_weight || 0;
    const weightB = b.total_weight || 0;
    
    if (weightA !== weightB) {
      return weightB - weightA;
    }
    
    // 4. Sort order (menor sort_order primero)
    const sortA = a.sort_order || 0;
    const sortB = b.sort_order || 0;
    
    return sortA - sortB;
  })
  .slice(0, 6); // ‚úÖ M√ÅXIMO 6 ART√çCULOS

console.log(`üì∞ [RelatedArticles] Mostrando ${sortedArticles.length} art√≠culos ordenados:`, 
  sortedArticles.map((a, i) => `${i+1}. "${a.title.substring(0, 40)}..." (peso: ${a.total_weight || 0}, featured: ${a.featured || false}, prioridad: ${a.content_priority || 'default'})`));

// Formatear fecha
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-DO', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Categor√≠as con colores
const categoryColors = {
  'Consejos': 'bg-blue-500',
  'Servicios': 'bg-green-500',
  'An√°lisis de Mercado': 'bg-purple-500',
  'Gu√≠as de Compra': 'bg-orange-500',
  'Inversi√≥n Inmobiliaria': 'bg-red-500',
  'Legal': 'bg-yellow-500',
  'Estilo de Vida': 'bg-pink-500',
  'Art√≠culos': 'bg-gray-500',
  'Blog': 'bg-indigo-500'
};

function getCategoryColor(category: string) {
  return categoryColors[category] || 'bg-gray-500';
}

// ‚úÖ SOLO USAR ART√çCULOS REALMENTE MARCADOS COMO FEATURED
const featuredArticle = sortedArticles.find(a => a.featured === true);
const regularArticles = featuredArticle ? 
  sortedArticles.filter(a => a.featured !== true) : 
  sortedArticles;
