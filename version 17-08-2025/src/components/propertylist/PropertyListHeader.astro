---
// components/propertylist/PropertyListHeader.astro
export interface Props {
  seoH1: string;
  seoH2?: string;
  totalProperties: number;
  breadcrumbs?: Array<{
    name: string;
    url?: string;
    is_active?: boolean;
    current?: boolean;
  }>;
}

const { seoH1, seoH2, totalProperties, breadcrumbs } = Astro.props;
---

<!-- Header Compacto y Directo -->
<section class="bg-white border-b border-gray-200">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Breadcrumbs -->
    {breadcrumbs && breadcrumbs.length > 1 && (
      <nav class="mb-4">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center">
              {index > 0 && (
                <svg class="w-4 h-4 mx-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              )}
              {crumb.is_active || crumb.current ? (
                <span class="text-gray-900 font-medium">{crumb.name}</span>
              ) : (
                <a href={crumb.url} class="hover:text-[#f04e00] transition-colors">{crumb.name}</a>
              )}
            </li>
          ))}
        </ol>
      </nav>
    )}

    <!-- H1 y contador en una sola lÃ­nea -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-4">
      <div>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900">
          {seoH1}
        </h1>
        {seoH2 && (
          <h2 class="text-lg text-gray-600 mt-1">
            {seoH2}
          </h2>
        )}
      </div>

      <!-- Contador compacto -->
      {totalProperties > 0 && (
        <div class="flex items-center gap-2 px-4 py-2 bg-[#f04e00]/10 text-[#f04e00] rounded-lg text-sm font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10V9a1 1 0 011-1h4a1 1 0 011 1v12m-6 0h6"></path>
          </svg>
          <span class="font-semibold">{totalProperties.toLocaleString()}</span>
          <span>disponibles</span>
        </div>
      )}
    </div>
  </div>
</section>