  <PropertyCarousel 
    title="Propiedades Exclusivas de María"
    subtitle="Propiedades premium disponibles en mi portafolio exclusivo"
    properties={currentAsesor.currentListings}
    viewAllLink={`/comprar?asesor=${currentAsesor.name.toLowerCase().replace(/\s+/g, '-')}`}
  />

  <!-- Client Testimonials -->
  <Testimonials 
    testimonials={currentAsesor.testimonials}
    title="Lo que dicen mis clientes"
    subtitle="Testimonios reales de clientes que han trabajado conmigo"
  />

