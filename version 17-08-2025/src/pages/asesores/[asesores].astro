        <h2 class="text-2xl font-bold text-gray-900 mb-8">Certificaciones y Credenciales</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {currentAsesor.certifications.map((cert) => (
            <div class="bg-white rounded-lg p-4 border-l-4 border-[#f04e00] flex items-center gap-3">
              <svg class="w-8 h-8 text-[#f04e00]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-gray-900 font-medium">{cert}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

