                  <div>
                    <div class="font-medium">WhatsApp</div>
                    <div class="text-sm text-white/80">Respuesta inmediata</div>
                  </div>
                </a>
              </div>
            </div>
            
            <!-- Schedule -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="font-semibold text-gray-900 mb-4">Horario de Atención</h3>
