  <!-- Expertise Bars -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Áreas de Expertise</h2>
        
        <div class="space-y-6">
          {currentAsesor.expertise.map((skill) => (
            <div class="bg-white rounded-lg p-6">
              <div class="flex justify-between items-center mb-2">
                <h3 class="font-semibold text-gray-900">{skill.area}</h3>
                <span class="text-[#f04e00] font-bold">{skill.percentage}%</span>
              </div>
              <p class="text-sm text-gray-600 mb-3">{skill.description}</p>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div 
                  class="bg-gradient-to-r from-[#f04e00] to-[#ff7a3d] h-3 rounded-full transition-all duration-1000"
                  style={`width: ${skill.percentage}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Sales -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Ventas Recientes</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {currentAsesor.recentSales.map((sale) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="relative">
              <img 
                src={sale.imagen} 
                alt={sale.titulo}
                class="w-full aspect-video object-cover"
              />
              {sale.destacado && (
                <span class="absolute top-3 left-3 bg-[#f04e00] text-white px-2 py-1 rounded text-xs font-medium">
                  Venta Destacada
                </span>
              )}
              <div class="absolute bottom-3 right-3 bg-black/80 text-white px-2 py-1 rounded text-sm">
                {formatDate(sale.fechaVenta)}
              </div>
            </div>
            
            <div class="p-4">
              <div class="flex justify-between items-start mb-2">
                <span class="text-xs text-[#f04e00] bg-[#f04e00]/10 px-2 py-1 rounded">
                  {sale.tipo}
                </span>
                <span class="text-lg font-bold text-[#f04e00]">{sale.precio}</span>
              </div>
              
              <h3 class="font-semibold text-gray-900 mb-2">{sale.titulo}</h3>
              
              <div class="flex items-center gap-4 text-xs text-gray-600 mb-3">
                <span>{sale.habitaciones} hab</span>
                <span>•</span>
                <span>{sale.banos} baños</span>
                <span>•</span>
                <span>{sale.metros} m²</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">{sale.sector}</span>
                <span class="text-xs text-gray-500">Cliente: {sale.cliente}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

