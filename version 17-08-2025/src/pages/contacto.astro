const servicios = [
  { value: 'vender', label: 'Quiero vender mi propiedad' },
  { value: 'desarrollo', label: 'Tengo un proyecto para desarrollar' },
  { value: 'comprar', label: 'Quiero comprar una propiedad' },
  { value: 'rentas', label: 'Interesado en rentas vacacionales' },
  { value: 'evaluacion', label: 'Evaluación gratuita' },
