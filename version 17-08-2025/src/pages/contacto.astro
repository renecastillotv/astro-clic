// Equipo simple
const equipo = [
  {
    name: 'María González',
    title: 'Directora Comercial',
    phone: '+1 809 555 0101',
    email: 'maria@clic.do',
    specialties: ['Ventas', 'Propiedades de lujo'],
    avatar: 'https://i.pravatar.cc/150?img=5'
  },
  {
    name: 'Carlos Rodríguez',
    title: 'Especialista en Proyectos',
    phone: '+1 809 555 0102',
    email: 'carlos@clic.do',
    specialties: ['Desarrollos', 'Comercialización'],
    avatar: 'https://i.pravatar.cc/150?img=8'
  },
  {
    name: 'Ana Martínez',
    title: 'Asesora de Ventas',
    phone: '+1 809 555 0103',
    email: 'ana@clic.do',
    specialties: ['Primeros compradores', 'Asesoría'],
    avatar: 'https://i.pravatar.cc/150?img=16'
  }
