    } else if (searchInfo.propertyType) {
      seoH1 = `${searchInfo.propertyType}s Disponibles`;
    } else {
      seoH1 = `Propiedades Disponibles`;
    }
  }

  // âœ… APLICAR NORMALIZACIÃ“N AL H1 FINAL
  return normalizeText(seoH1);
}

