    talkToAdvisor: 'Hablar con Asesor',
    scheduleAppointment: 'Programar Cita',
    imInterestedIn: 'Hola, estoy interesado en',
    properties: 'propiedades',
    in: 'en',
    thisArea: 'esta zona',
    the: 'el',
    perfect: 'perfecto'
  },
  en: {
    needPersonalizedHelp: 'Need Personalized Help?',
    ourExpertsWillHelp: 'Our expert advisors will guide you to find the perfect property that fits your budget and needs',
    ourExpertsWillHelpSpecific: 'Our expert advisors will help you find',
    perfectIn: 'perfect in',
    talkToAdvisor: 'Talk to Advisor',
    scheduleAppointment: 'Schedule Appointment',
    imInterestedIn: 'Hi, I\'m interested in',
    properties: 'properties',
    in: 'in',
    thisArea: 'this area',
    the: 'the',
    perfect: 'perfect'
  },
  fr: {
    needPersonalizedHelp: 'Besoin d\'Aide Personnalisée?',
    ourExpertsWillHelp: 'Nos conseillers experts vous guideront pour trouver la propriété parfaite qui correspond à votre budget et vos besoins',
    ourExpertsWillHelpSpecific: 'Nos conseillers experts vous aideront à trouver',
    perfectIn: 'parfait à',
    talkToAdvisor: 'Parler à un Conseiller',
    scheduleAppointment: 'Prendre Rendez-vous',
    imInterestedIn: 'Bonjour, je suis intéressé par',
    properties: 'propriétés',
    in: 'à',
    thisArea: 'cette zone',
    the: 'le',
    perfect: 'parfait'
  }
};

const t = translations[language] || translations.es;

// Función para obtener el artículo correcto según el idioma y el tipo de propiedad
function getArticle(propertyType: string | undefined, lang: string): string {
  if (!propertyType) return '';
  
  const lower = propertyType.toLowerCase();
  
  if (lang === 'es') {
    // Femeninos
    if (lower.includes('casa') || lower.includes('villa') || lower.includes('propiedad')) {
      return 'la';
    }
    // Masculinos
    return 'el';
  } else if (lang === 'en') {
    return 'the';
  } else if (lang === 'fr') {
    // Femeninos en francés
    if (lower.includes('maison') || lower.includes('villa') || lower.includes('propriété')) {
      return 'la';
    }
    // Masculinos
    return 'le';
  }
  
  return '';
}

// Función para traducir tipos de propiedad comunes
function translatePropertyType(type: string | undefined, lang: string): string {
  if (!type) return t.properties;
  
  const translations: Record<string, Record<string, string>> = {
    'apartamento': { es: 'apartamento', en: 'apartment', fr: 'appartement' },
    'apartamentos': { es: 'apartamentos', en: 'apartments', fr: 'appartements' },
    'casa': { es: 'casa', en: 'house', fr: 'maison' },
    'casas': { es: 'casas', en: 'houses', fr: 'maisons' },
    'villa': { es: 'villa', en: 'villa', fr: 'villa' },
    'villas': { es: 'villas', en: 'villas', fr: 'villas' },
    'penthouse': { es: 'penthouse', en: 'penthouse', fr: 'penthouse' },
    'penthouses': { es: 'penthouses', en: 'penthouses', fr: 'penthouses' },
    'terreno': { es: 'terreno', en: 'land', fr: 'terrain' },
    'terrenos': { es: 'terrenos', en: 'lands', fr: 'terrains' },
    'local': { es: 'local', en: 'commercial space', fr: 'local commercial' },
    'locales': { es: 'locales', en: 'commercial spaces', fr: 'locaux commerciaux' },
    'propiedad': { es: 'propiedad', en: 'property', fr: 'propriété' },
    'propiedades': { es: 'propiedades', en: 'properties', fr: 'propriétés' }
  };
  
  const lower = type.toLowerCase();
  
  // Buscar traducción exacta
  for (const [key, trans] of Object.entries(translations)) {
    if (lower.includes(key)) {
      return trans[lang] || type;
    }
  }
  
  // Si no se encuentra traducción, devolver el original
  return type;
}

// Construir el mensaje específico si hay información de búsqueda
const buildSpecificMessage = () => {
  const translatedPropertyType = translatePropertyType(searchInfo.propertyType, language);
  const article = getArticle(searchInfo.propertyType, language);
  const location = searchInfo.location || searchInfo.sector;
  
  if (searchInfo.propertyType && location) {
    if (language === 'es') {
      return `${t.ourExpertsWillHelpSpecific} ${article} ${translatedPropertyType} ${t.perfect} ${t.in} ${location}`;
    } else if (language === 'en') {
      return `${t.ourExpertsWillHelpSpecific} ${t.the} ${t.perfect} ${translatedPropertyType} ${t.in} ${location}`;
    } else if (language === 'fr') {
      return `${t.ourExpertsWillHelpSpecific} ${article} ${translatedPropertyType} ${t.perfect} ${t.in} ${location}`;
    }
  }
  
  return t.ourExpertsWillHelp;
};

// Construir el mensaje de WhatsApp
const buildWhatsAppMessage = () => {
  const propertyType = translatePropertyType(searchInfo.propertyType, language) || t.properties;
  const location = searchInfo.location || searchInfo.sector || t.thisArea;
  
  return `${t.imInterestedIn} ${propertyType} ${t.in} ${location}`;
};

const dynamicMessage = buildSpecificMessage();
const whatsappMessage = buildWhatsAppMessage();

// Número de WhatsApp según el idioma/país (puedes personalizar estos números)
const whatsappNumbers = {
  es: '18295148080', // República Dominicana
  en: '18295148080', // Mismo número pero podrías cambiarlo
  fr: '18295148080'  // Mismo número pero podrías cambiarlo
};

const whatsappNumber = whatsappNumbers[language] || whatsappNumbers.es;
