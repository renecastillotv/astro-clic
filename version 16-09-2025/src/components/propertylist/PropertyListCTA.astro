// components/propertylist/PropertyListCTA.astro
export interface Props {
  searchInfo: {
    location?: string;
    propertyType?: string;
    operation?: string;
    sector?: string;
  };
  language?: 'es' | 'en' | 'fr';
}

const { 
  searchInfo, 
  language = 'es' 
} = Astro.props;

// Traducciones trilingües
const translations = {
  es: {
    needPersonalizedHelp: '¿Necesitas Ayuda Personalizada?',
    ourExpertsWillHelp: 'Nuestros asesores expertos te guiarán para encontrar la propiedad perfecta que se ajuste a tu presupuesto y necesidades',
    ourExpertsWillHelpSpecific: 'Nuestros asesores expertos te ayudarán a encontrar',
