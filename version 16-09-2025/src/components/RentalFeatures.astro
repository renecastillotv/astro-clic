// RentalFeatures.astro
export interface Props {
  title?: string;
  subtitle?: string;
  features?: Array<{
    icon: string;
    title: string;
    description: string;
    color?: string;
  }>;
  layout?: 'grid' | 'list';
  background?: 'white' | 'gray' | 'brand';
}

const { 
  title = "¿Por qué elegir CLIC para tus vacaciones?",
  subtitle,
  features = [],
  layout = 'grid',
  background = 'white'
} = Astro.props;

// Datos por defecto si no se pasan props
const defaultFeatures = [
  {
    icon: 'verified',
    title: 'Propiedades Verificadas',
    description: 'Todas nuestras propiedades son inspeccionadas y verificadas personalmente.',
    color: 'text-[#f04e00]'
  },
  {
    icon: 'support',
    title: 'Soporte 24/7',
    description: 'Equipo local disponible las 24 horas para cualquier necesidad durante tu estadía.',
    color: 'text-[#f04e00]'
  },
  {
    icon: 'price',
    title: 'Mejores Precios',
    description: 'Garantizamos los mejores precios sin tarifas ocultas ni sorpresas.',
    color: 'text-[#f04e00]'
  },
  {
    icon: 'local',
    title: 'Conocimiento Local',
    description: 'Somos expertos locales que conocemos cada rincón del país.',
    color: 'text-[#f04e00]'
  }
];

const finalFeatures = features.length > 0 ? features : defaultFeatures;

const backgroundClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  brand: 'bg-[#f04e00]'
};

const textClasses = {
  white: 'text-gray-900',
  gray: 'text-gray-900',
  brand: 'text-white'
};

const subtextClasses = {
  white: 'text-gray-600',
  gray: 'text-gray-600',
  brand: 'text-white/90'
};

// Función para obtener el icono SVG
function getIcon(iconName: string) {
  const icons = {
    verified: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>`,
    support: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>`,
    price: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>`,
    local: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>`,
    security: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
    experience: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>`,
    quality: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>`,
    default: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>`
  };
  return icons[iconName] || icons.default;
}
---

<section class={`py-16 ${backgroundClasses[background]}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${textClasses[background]}`}>
        {title}
      </h2>
      {subtitle && (
        <p class={`text-xl mb-12 ${subtextClasses[background]}`}>
          {subtitle}
        </p>
      )}
      
      <div class={`${layout === 'grid' ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8' : 'space-y-8 max-w-3xl mx-auto'}`}>
        {finalFeatures.map((feature, index) => (
          <article 
            class={`rental-feature-item ${layout === 'list' ? 'flex items-start gap-4 text-left' : 'text-center'}`}
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <!-- Icon -->
            <div class={`${layout === 'list' ? 'flex-shrink-0' : 'flex justify-center mb-4'}`}>
              <div class={`w-16 h-16 ${background === 'brand' ? 'bg-white/20' : 'bg-gray-100'} rounded-full flex items-center justify-center ${layout === 'list' ? '' : 'mx-auto'}`}>
                <svg 
                  class={`w-8 h-8 ${feature.color || 'text-[#f04e00]'}`} 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                  set:html={getIcon(feature.icon)}
                />
              </div>
            </div>
            
            <!-- Content -->
            <div class={layout === 'list' ? 'flex-1' : ''}>
              <h3 class={`font-semibold mb-2 ${textClasses[background]} ${layout === 'list' ? 'text-lg' : 'text-base md:text-lg'}`}>
                {feature.title}
              </h3>
              <p class={`${subtextClasses[background]} text-sm leading-relaxed`}>
                {feature.description}
              </p>
            </div>
          </article>
        ))}
      </div>
      
      <!-- Optional CTA -->
      <div class="mt-12">
        <a 
          href="/rentas-vacacionales/como-funciona"
          class={`inline-flex items-center gap-2 px-6 py-3 ${
            background === 'brand' 
              ? 'bg-white text-[#f04e00] hover:bg-gray-100' 
              : 'bg-[#f04e00] text-white hover:bg-[#d94400]'
          } rounded-lg transition-colors font-semibold`}
        >
          Conoce más sobre nuestro servicio
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Schema.org structured data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "CLIC Rentas Vacacionales",
    "description": title,
    "provider": {
      "@type": "Organization",
      "name": "CLIC Inmobiliaria"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Servicios de Rentas Vacacionales",
      "itemListElement": finalFeatures.map((feature, index) => ({
        "@type": "Offer",
        "name": feature.title,
        "description": feature.description
      }))
    }
  })} />
</section>

<style>
  .rental-feature-item {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .rental-feature-item:hover {
    transform: translateY(-5px);
  }
  
  @media (min-width: 768px) {
    .rental-feature-item:hover {
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
  }
  
  /* Animation on scroll */
  [data-aos="fade-up"] {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  [data-aos="fade-up"].aos-animate {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Simple AOS (Animate On Scroll) implementation
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = parseInt(entry.target.dataset.aosDelay) || 0;
          
          setTimeout(() => {
            entry.target.classList.add('aos-animate');
          }, delay);
          
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    document.querySelectorAll('[data-aos]').forEach(item => {
      observer.observe(item);
    });
  });
</script>