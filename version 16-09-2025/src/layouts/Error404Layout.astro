// ===================================================================
// DETECTAR IDIOMA DE LA URL
// ===================================================================

function detectLanguageFromUrl(pathname) {
  const segments = pathname.split('/').filter(Boolean);
  
  // Detectar prefijo de idioma
  if (segments.length > 0) {
    const firstSegment = segments[0].toLowerCase();
    switch (firstSegment) {
      case 'en':
        return { language: 'en', segments: segments.slice(1) };
      case 'fr':
        return { language: 'fr', segments: segments.slice(1) };
      default:
        return { language: 'es', segments: segments };
    }
  }
  
  return { language: 'es', segments: [] };
}

